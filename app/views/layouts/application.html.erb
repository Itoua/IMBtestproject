<!DOCTYPE html>
<html>
  <head>
    <title>TestProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li><%= link_to 'PHOTOS', photos_path %><span class="sr-only">(current)</span></li>
          <li><%= link_to 'USERS', users_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><p>Welcome <b><%= current_user.email %></b><span class="btn btn-default navbar-btn"><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></span></p></li>
          <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
   <%= yield %>
  </body>
</html>
